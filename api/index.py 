mkdir -p api
cat > api/index.py << 'EOF'
# This file makes Vercel treat Django as a serverless function
import os
import sys

# Add project to path
sys.path.insert(0, os.path.dirname(os.path.dirname(os.path.abspath(__file__))))

from savetracker.wsgi import application

def handler(request, response):
    return application(request, response)
EOF